const currentYear = new Date().getFullYear();
---

<footer class="footer">
  <div class="footer-content">
    <div class="footer-left">
      <p class="copyright">
        Â© {currentYear} <strong class="brand">AlanOlv</strong>. Todos los derechos reservados.
      </p>
    </div>
    
    <div class="footer-right">
      <a href="mailto:olvera.cristino.alan@gmail.com" class="contact-link">
        <svg class="contact-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M4 4H20C21.1 4 22 4.9 22 6V18C22 19.1 21.1 20 20 20H4C2.9 20 2 19.1 2 18V6C2 4.9 2.9 4 4 4Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
