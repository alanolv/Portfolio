<style>
  .hero-container {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100%;
    width: 100%;
    padding: 0 2rem;
  }

  .hero-content {
    max-width: 700px;
    width: 100%;
    text-align: left;
    padding: 0 1rem;
  }

  .badge-container {
    margin-bottom: 1.5rem;
  }

  .hero-name {
    font-size: 3rem;
    font-weight: bold;
    color: #ffffff;
    margin-bottom: 1.5rem;
    line-height: 1.1;
    position: relative;
  }

  .hero-name::after {
    content: '';
    position: absolute;
    bottom: -0.5rem;
    left: 0;
    width: 60px;
    height: 3px;
    background: linear-gradient(90deg, #7fa37e, #a85772);
  }

  .hero-description {
    font-size: 1.25rem;
    color: #dddddd;
    margin-bottom: 2rem;
    line-height: 1.6;
  }

  .hero-strong {
    background: linear-gradient(45deg, #7fa37e, #a85772);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    font-weight: bold;
  }

  .hero-nav {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }



  @media (max-width: 768px) {
    .hero-container {
      padding: 0 1rem;
    }
    
    .hero-name {
      font-size: 2.5rem;
    }
    
    .hero-description {
      font-size: 1.1rem;
    }
    
    .hero-nav {
      flex-direction: column;
      gap: 0.75rem;
    }
  }

  @media (max-width: 480px) {
    .hero-name {
      font-size: 2rem;
    }
    
    .hero-content {
      padding: 0 0.5rem;
    }
  }
</style>
