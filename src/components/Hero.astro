---
const personalImageAlt = "Miguel Ángel";
import BadgeSE from "./BadgeSE.astro";
import LinkedInIcon from "../components/icons/Linkedin.astro";
import MailIcon from "../components/icons/Mail.astro";
import SocialPill from "./SocialPill.astro";
---

<div class="max-w-xl">
  <div class="flex gap-4 mb-4">
    <a
      href="https://linkedin.com/in/midudev"
      target="_blank"
      rel="noopener"
      class="flex items-center transition md:justify-center md:hover:scale-105"
    >
      <BadgeSE>Ingeniero de Software</BadgeSE>
    </a>
  </div>
  <h1 class="hero-name">Alan Olvera</h1>
  <p class="hero-description">
    <strong class="hero-strong">Ingeniero de Software de México</strong> con +1 año
    de experiencia en desarrollo de soluciones de software.
  </p>
  <nav class="flex flex-wrap gap-4 mt-8">
    <SocialPill href="mailto:olvera.cristino.alan@gmail.com">
      <MailIcon class="size-4" />
      Contáctame
    </SocialPill>
    <SocialPill href="https://www.linkedin.com/in/alan-olvera-cristino/">
      <LinkedInIcon class="size-4" />
      LinkedIn
    </SocialPill>
  </nav>
</div>

<style>
  .hero-name {
    font-size: 2.5rem;
    font-weight: bold;
    margin-top: 0.78rem;
    color: #ffff;
    margin-bottom: 10px;
  }
  .hero-description {
    margin-top: 0px;
    font-size: 1.25rem;
    color: #dddddd;
  }
  .hero-strong {
    animation: colorChange 6s infinite;
  }

  @keyframes colorChange {
    0% {
      color: #7fa37e; 
    }
    25% {
      color: #999a4f;
    }
    50% {
      color: #a85772; 
    }
    75% {
      color: #2b648a; 
    }
    100% {
      color: #7fa37e; 
    }
  }
</style>
